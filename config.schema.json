{
  "pluginAlias": "CresKit",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "name",
        "type": "string",
        "default": "Komen",
        "required": true
      },
      "host": {
        "title": "host",
        "type": "string",
        "default": "192.168.1.99",
        "required": true
      },
      "port": {
        "title": "port",
        "type": "string",
        "default": "50001",
        "required": true
      },
      "minValue": {
        "title": "minValue",
        "type": "number",
        "default": 60,
        "required": false,
        "description": "HeaterCooler SetTemperature MinValue,Default:16"
      },
      "maxValue": {
        "title": "maxValue",
        "type": "number",
        "default": 90,
        "required": false,
        "description": "HeaterCooler SetTemperature MaxValue,Default:32"
      },
      "Fahrenheit": {
        "title": "Fahrenheit",
        "type": "number",
        "default": 1,
        "required": false,
        "description": "HeaterCooler Temperature Display 1:Fahrenheit, 0:Celsius,Default:0"
      },
      "minStep": {
        "title": "minStep",
        "type": "number",
        "default": 0.1,
        "required": false,
        "description": "HeaterCooler Temperature minStep"
      },
      "accessories": {
        "title": "array",
        "items": {
          "title": "Accessories Config",
          "type": "object",
          "properties": {
            "source": {
              "title": "id",
              "type": "number",
              "default": 1,
              "required": true
            },
            "type": {
              "title": "type",
              "type": "string",
              "oneOf": [
                {
                  "title": "Lightbulb",
                  "enum": [
                    "Lightbulb"
                  ]
                },
                {
                  "title": "DimLightbulb",
                  "enum": [
                    "DimLightbulb"
                  ]
                },
                {
                  "title": "HeaterCooler",
                  "enum": [
                    "HeaterCooler"
                  ]
                },
                {
                  "title": "SpeedFan",
                  "enum": [
                    "SpeedFan"
                  ]
                },
                {
                  "title": "AirPurifier",
                  "enum": [
                    "AirPurifier"
                  ]
                },
                {
                  "title": "WindowsCovering",
                  "enum": [
                    "WindowsCovering"
                  ]
                },
                {
                  "title": "AirQualitySensor",
                  "enum": [
                    "AirQualitySensor"
                  ]
                },
                {
                  "title": "HumiditySensor",
                  "enum": [
                    "HumiditySensor"
                  ]
                },
                {
                  "title": "TemperatureSensor",
                  "enum": [
                    "TemperatureSensor"
                  ]
                },
                {
                  "title": "CarbonDioxideSensor",
                  "enum": [
                    "CarbonDioxideSensor "
                  ]
                },
                {
                  "title": "OccupancySensor",
                  "enum": [
                    "OccupancySensor"
                  ]
                },
                {
                  "title": "Faucet",
                  "enum": [
                    "Faucet"
                  ]
                },
                {
                  "title": "Switch",
                  "enum": [
                    "Switch"
                  ]
                }
              ],
              "required": true
            },
            "name": {
              "title": "name",
              "type": "string",
              "default": "LIGHT",
              "required": true
            }
          }
        }
      }
    }
  }
}